#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
struct Person
{
	char NameSername[64];
	char date[16];
	char prof[32];
	int numline;
};

struct List
{
	Sotr sotr;
	List *pNext;
};
void addFirst(List *& pF, 
	List* p)
{
	p->pNext = pF;
	pF = p;
}
List * delFirst(List *&pF) 
{
	if (pF == 0) return 0;
	List *p = pF;
	pF = pF->pNext;
	return p;

}
bool add(List *&pF, List * pZad, List *p)
{
	if (pZad == pF)
	{
		p->pNext = pF;
		pF = p;
		return true;
	}

	List *pPred = pF;
	while (pPred->pNext != pZad && pPred->pNext)
		pPred = pPred->pNext;
	if (pPred->pNext == 0) return false;
	p->pNext = pZad;
	pPred->pNext = p;
	return true;
}
List * del(List*& pF, List *p)
	if (pF == 0) return 0;
	if (pF == p)
	{
		pF = pF->pNext;
		return p;
	}
	else
	{
		List *pPred = pF;
		while (pPred->pNext != p && pPred->pNext)
			pPred = pPred->pNext;
		if (pPred->pNext == 0) return 0;
		pPred->pNext = p->pNext;
		return p;
	}
	while (delFirst(pF));
}

int main(int argc, char* argv[])
{
	List *pF = 0;
	List *p;
	char Ch;
	do
	{
		p = (List *)malloc(sizeof(List));
		printf("\nName and sername: ");
		fflush(stdin); gets_s(p->Person.NameSername, 63);
		printf("Date of birthday: ");
		fflush(stdin); gets_s(p->Person.date, 15);
		printf("Profession: ");
		fflush(stdin); gets_s(p->Person.prof, 31);
		printf("\nNumber of Metro line: ");
		fflush(stdin); scan_f(p->Person.numline)
		addFirst(pF, p);
		printf("For continue press Z or z! ");
		Ch = _getche();
	} while (Ch == 'Z' || Ch == 'z');
	for (List *pi = pF; pi; pi = pi->pNext)
		printf("\n%s %s %s Line number=%d", pi->Person.NameSername, pi->Person.date,
		pi->Person.pr, pi->Person.numline);
	for (List *pi = pF; pi->pNext;)
	{
		int min = pi->Person.numline;
		List *pmin = pi;
		for (List *pj = pi->pNext; pj; pj = pj->pNext)
			if (pj->Person.numline<min)
			{
			min = pj->Person.numline;
			pmin = pj;
			}
		if (pi != pmin)
		{
			del(pF, pmin);
			add(pF, pi, pmin);
		}
		else pi = pi->pNext;
	}
	printf("\nSrting:");
	for (List *pi = pF; pi; pi = pi->pNext)
		printf("\n%s %s %s oklad=%.2f", pi->sotr.fio, pi->sotr.date,
		pi->sotr.dolg, pi->sotr.okl);
	printf("\nFor exit press any key ");
	system("pause");
	return 0;
}
